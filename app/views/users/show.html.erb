<div class="body pagetop">
	<div class="container">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

		<div class="row">
			<div class="col-xs-3">
			  <%= render 'users/sidebar', user: @user, book: @book %>
		    </div>

		    <div class="col-xs-9">
		      <h2>Books</h2>
		      <table class="table table-hover table-inverse">
		      	<thead>
		      		<tr>
		      			<th></th>
		      			<th>Title</th>
		      			<th>Opinion</th>
		      			<th colspan="3"></th>
		      		</tr>
		      	</thead>
		      	<tbody>
		      		<% @books.each do |b| %>
		      		<tr>
		      			<td>
		      				<%= link_to user_path(@user.id) do %>
		      				    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
		      				<% end %>
		      			</td>
		      			<td><%= link_to b.title, book_path(b) %></td>
		      			<td><%= b.body %></td>
		      		<% end %>
		      	    </tr>
		      	</tbody>
              </table>
            </div>

        </div>

    </div>

</div>