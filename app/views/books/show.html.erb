<div class="body pagetop">
	<div class="container">

        <% if flash[:notice] %>
          <div class="flash">
        <%= flash[:notice] %>
          </div>
        <% end %>

        <div class="row">
        	<div class="col-xs-3">
        		<%= render 'users/sidebar', user: @bookf.user, book: @book %>
        	</div>
        	<div class="col-xs-9">
        		<h2>Book detail</h2>
        		<table class="table">
        			<tbody>
        				<tr>
        					<td>
        						<%= link_to user_path(@bookf.user) do %>
                                    <%= attachment_image_tag @bookf.user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
                                    <br><%= @bookf.user.name %>
                                <% end %>
                            </td>
                            <td><%= link_to @bookf.title, book_path(@bookf) %></td>
                            <td><%= @bookf.body %></td>
                            <% if @bookf.user == current_user %>
                            <td><%= link_to "Edit", edit_book_path(params[:id]), class: "btn-sm btn-success" %></td>
                            <td><%= link_to "Destroy", book_path(params[:id]), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
                            <% end %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>







