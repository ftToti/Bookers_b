<div class="body pagetop">
  <div class="container">

<% if @book.errors.any? %>
    <div>
      <p><%= @book.errors.size %> errors prohibited this book from being saved:</p>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
        </div>
        <div class="actions row">
          <%= f.submit :class=>"col-xs-12 btn btn-primary" %>
        </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>





    
      
      
      
    