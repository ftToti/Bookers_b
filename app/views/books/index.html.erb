<div class="body pagetop">

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @book.errors.any? %>
    <div>
    	<p><%= @book.errors.size %> errors prohibited this book from being saved:</p>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/sidebar', user: @user, book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @books.each do |b| %>
          <tr>
            <td>
              <%= link_to user_path(b.user) do %>
                  <%= attachment_image_tag b.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td><%= link_to b.title, book_path(b) %></td>
            <td><%= b.body %></td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>